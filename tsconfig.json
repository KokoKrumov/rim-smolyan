{
  // Cleaned up: Removed deprecated properties (skipDefaultLibCheck, pretty) and
  // properties set to default values for a cleaner, more maintainable config.
  //
  // Build optimizations for ES2022: Added modern class fields, module detection,
  // incremental compilation, and lib definitions for better performance.
  //
  // TypeScript 5.5: Optimized for IDE/type-checking, webpack handles build-specific optimizations
  "compilerOptions": {
    // "allowJs": false, // Default value - removed for brevity
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": "./src",
    // "declaration": false, // Default value - removed for brevity
    // "disableSizeLimit": false, // Default value - removed for brevity
    // "emitBOM": false, // Default value - removed for brevity
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    // "inlineSourceMap": false, // Default value - removed for brevity
    // "inlineSources": false, // Default value - removed for brevity
    // Ensures each file can be compiled independently - required for bundlers like webpack
    // and transpilers like ts-loader in transpileOnly mode for better performance, we need esModules for this
    "isolatedModules": true,
    "jsx": "react-jsx",
    // "jsxFactory": "React.createElement",
    // "listEmittedFiles": false, // Default value - removed for brevity
    // "listFiles": false, // Default value - removed for brevity
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true, // Let webpack handle emission for better build performance
    // "noEmitHelpers": false, // Default value - removed for brevity
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noLib": false, // Default value - removed for brevity
    // "noResolve": false, // Default value - removed for brevity
    // "noUnusedLocals": false, // Default value - removed for brevity
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    // "pretty": true, // DEPRECATED: No longer has any effect
    // "removeComments": true, // Webpack overrides this in ts-loader
    // "skipDefaultLibCheck": false, // DEPRECATED: Use "skipLibCheck" instead
    // "skipLibCheck": false, // Default value - removed for brevity
    "sourceMap": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "preserveSymlinks": true,
    "paths": {
      "test/*": ["../test/*"]
    }
  },
  "exclude": [
    "node_modules",
  ]
}
